<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Chat">

    <Button
        android:id="@+id/Green"
        android:layout_width="77dp"
        android:layout_height="34dp"
        android:layout_above="@id/message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="126dp"
        android:layout_marginRight="126dp"
        android:layout_marginBottom="37dp"
        android:text="Green" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="top" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/send"
        android:layout_toLeftOf="@+id/send"
        android:hint="Your message"
        android:imeOptions="actionSend" />


    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:minHeight="48dp"
        android:text="Send" />

    <Button
        android:id="@+id/Blue"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_above="@id/message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginBottom="36dp"
        android:text="Blue" />

    <Button
        android:id="@+id/Red"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_above="@id/message"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="226dp"
        android:layout_marginRight="226dp"
        android:layout_marginBottom="36dp"
        android:text="Red" />

    <Button
        android:id="@+id/RB"
        android:layout_width="45dp"
        android:layout_height="33dp"
        android:layout_alignBottom="@+id/Blue"
        android:layout_alignParentLeft="false"
        android:layout_marginEnd="29dp"
        android:layout_marginRight="229dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/Red"
        android:layout_toLeftOf="@+id/Blue"
        android:text="RB" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="371dp"
        android:layout_height="481dp"
        android:layout_above="@+id/Blue"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="22dp"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom" />

    </ScrollView>

</RelativeLayout>
